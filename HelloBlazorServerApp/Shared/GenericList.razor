@typeparam Titem
@if (ListOfItems == null)
{
    @if (NullList != null)
    {
        @NullList
    }
    else
    {
        <img src="https://i.pinimg.com/originals/b2/d4/b2/b2d4b2c0f0ff6c95b0d6021a430beda4.gif" height="200" />
    }

}
else
    if (ListOfItems.Count == 0)
{
    @if (EmptyList != null)
    {
        @EmptyList
    }
    else
    {
        <img src="https://cdn.dribbble.com/users/2059463/screenshots/4828452/polizas_gif.gif" />

    }
}
else
{
    @foreach (var item in ListOfItems)
    {
        @ItemTemplate(item)
    }
}

@code {
    [Parameter]
    public RenderFragment NullList { get; set; }

    [Parameter]
    public RenderFragment EmptyList { get; set; }

    [Parameter]
    public RenderFragment<Titem> ItemTemplate { get; set; }

    [Parameter]
    public List<Titem> ListOfItems { get; set; }
}
